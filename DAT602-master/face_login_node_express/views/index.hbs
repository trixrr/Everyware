<link rel="stylesheet" href="style.css">
<script src="lib-head.pack.min.js"></script>
<style>
 h1, h5, p {
 	color:#fff;
 }
</style>
<canvas id="canvas" class="canvas" width="100%" height="100%"></canvas>

	<div class="row mb-4">
	    <div class="col my-auto">
			<h1 class="mb-4"><i class="far fa-grin-wink"></i> Face Login</h1>
			{{#if user}}
			<div class="media">
				<img class="mr-3 img-thumbnail" src="https://s3-eu-west-1.amazonaws.com/dat-602-users/{{user.local.username}}/{{toLowerCase user.local.username}}_01.jpg" width="150px">
			  	<div class="media-body">
			    	<h5 class="mt-0">{{user.local.username}}</h5>
			    	<p>You are logged in as {{user.local.username}}</p>
				  </div>
				</div>
			{{/if}}
		</div>
	</div>
{{#unless user}}
	<div class="row text-center">
	    <div class="col text-center my-auto">
	        <div class="card bg-secondary">
	            <div class="card-body align-items-center d-flex justify-content-center">
	                <a href="/login" class="btn btn-lg btn-block btn-secondary"><i class="fas fa-sign-in-alt"></i> Login</a>
	            </div>
	        </div>
	    </div>
	    <div class="col text-center my-auto">
	        <div class="card bg-secondary">
	            <div class="card-body align-items-center d-flex justify-content-center">
	                <a href="/signup" class="btn btn-lg btn-block btn-secondary"><i class="fas fa-user-plus"></i> Signup</a>
	            </div>
	        </div>
	    </div>
	</div>
{{/unless}}
<script src="lib-body.pack.min.js"></script>
<script src="index.min.js"></script>